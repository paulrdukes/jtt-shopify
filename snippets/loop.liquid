{% if template contains 'index' %}	
	{% include 'product-grid' %}
{% else %}

<div class="product clearfix">
	<div class="product-header clearfix">
		<div class="product-title left">
			<h3>
				<a href="{{ product.url }}" alt="{{ product.title}}">{{ product.title }}</a>
			</h3>
		</div>
		
		<div class="product-price right">
			<strong>
				{% if product.price_varies %} 
				{{ product.price_min | money }} - {{ product.price_max | money }}       
				{% else %}
				{{ product.price | money }}
				{% endif %}
			</strong>
		</div>
	</div>
			
	<div class="product-wrapper left"  >
		<a href="{{ product.url }}" alt="{{ product.title}}">
			<img class="product-image left" src="{{ product.featured_image | product_img_url: 'compact' }}"  alt="{{ product.title }}"/>
		</a>
	
		{{ product.description }}
	</div>	
{% endif %}